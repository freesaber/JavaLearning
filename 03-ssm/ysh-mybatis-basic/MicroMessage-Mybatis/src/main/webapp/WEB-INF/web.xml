<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <!--Spring MVC servlet-->
  <servlet>
    <servlet-name>ListServlet</servlet-name>
    <servlet-class>net.freesaber.servlet.ListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListServlet</servlet-name>
    <url-pattern>/List.action</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteOneServlet</servlet-name>
    <servlet-class>net.freesaber.servlet.DeleteOneServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteOneServlet</servlet-name>
    <url-pattern>/DeleteOneServlet.action</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteBatchServlet</servlet-name>
    <servlet-class>net.freesaber.servlet.DeleteBatchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteBatchServlet</servlet-name>
    <url-pattern>/DeleteBatchServlet.action</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>InitTalkServlet</servlet-name>
    <servlet-class>net.freesaber.servlet.InitTalkServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InitTalkServlet</servlet-name>
    <url-pattern>/InitTalkServlet.action</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AutoReplyServlet</servlet-name>
    <servlet-class>net.freesaber.servlet.AutoReplyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AutoReplyServlet</servlet-name>
    <url-pattern>/AutoReplyServlet.action</url-pattern>
  </servlet-mapping>

  <!-- 访问根路径时的默认访问页面，从上到下匹配 -->
  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
    <welcome-file>/index.html</welcome-file>
    <welcome-file>/reg.html</welcome-file>
  </welcome-file-list>
</web-app>